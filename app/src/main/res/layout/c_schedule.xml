<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background3"
    tools:context=".caretaker.Schedule">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="backtoHome">
        <ImageView
            android:id="@+id/account"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:src="@drawable/i_back"
            android:alpha="0.9">
        </ImageView>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCHEDULE"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="0.9"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:textSize="18dp">
    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_white"
            android:id="@+id/adpatient">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/editslot1_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/green"
                android:src="@drawable/i_edit"
                android:onClick="gotoSetOne">
            </com.google.android.material.floatingactionbutton.FloatingActionButton>


            <ImageView
                android:layout_width="35dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/background_rect">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="The Medicine"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="65dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="Period"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/period1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin_italic"
                android:text="*This term can change according to the patient's condition"
                android:textColor="@color/brown"
                android:textSize="11dp"
                android:textStyle="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="60dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="Interval"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/interval1"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="70dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="72dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin_italic"
                android:text="MINUTES"
                android:textColor="@color/brown"
                android:textSize="24dp"
                android:textStyle="bold">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/adpatient"
            android:layout_marginTop="25dp"
            android:background="@drawable/rect_white">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/editslot2_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/green"
                android:src="@drawable/i_edit"
                android:onClick="gotoSetTwo">
            </com.google.android.material.floatingactionbutton.FloatingActionButton>


            <ImageView
                android:layout_width="35dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/background_rect">
            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="The Medicine"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="65dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="Period"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/period2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin_italic"
                android:text="*This term can change according to the patient's condition"
                android:textColor="@color/brown"
                android:textSize="11dp"
                android:textStyle="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="60dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="Interval"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/interval2"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="70dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="72dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin_italic"
                android:text="MINUTES"
                android:textColor="@color/brown"
                android:textSize="24dp"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
