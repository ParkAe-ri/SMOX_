<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".patient.Homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <ImageView
        android:id="@+id/account"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/i_menu"
        android:onClick="menu">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/welcome">

        <TextView
            android:id="@+id/sa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/opensans_extrabold"
            android:textColor="@color/white"
            android:textSize="24dp"></TextView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="145dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/rect_green"
        android:id="@+id/upcoming">

        <RelativeLayout
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="UPCOMING"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="64dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="65dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="."
                android:textColor="@color/brown"
                android:textSize="36dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="55dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="65dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="36dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/instruction"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textAlignment="textEnd"
                android:textColor="@color/brown"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="No Data"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="30dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@id/upcoming"
        android:id="@+id/row1">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rect_white"
            android:onClick="gotoSchedule">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/im_schedule">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:alpha="0.9"
                android:text="SCHEDULE"
                android:fontFamily="@font/roboto"
                android:textColor="@color/brown"
                android:textSize="16dp"
                android:textStyle="">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rect_white"
            android:id="@+id/schedule"
            android:onClick="gotoDosage">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/im_dosage">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:alpha="0.9"
                android:text="DOSAGE"
                android:fontFamily="@font/roboto"
                android:textColor="@color/brown"
                android:textSize="16dp"
                android:textStyle="">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/row1"
        android:id="@+id/row2">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/schedule"
            android:background="@drawable/rect_white"
            android:id="@+id/history"
            android:onClick="gotoHistory">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/im_history">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:alpha="0.9"
                android:text="HISTORY"
                android:fontFamily="@font/roboto"
                android:textColor="@color/brown"
                android:textSize="16dp"
                android:textStyle="">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rect_white"
            android:id="@+id/infromation"
            android:onClick="gotoInformation"
            android:visibility="visible">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/im_caretaker">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:alpha="0.9"
                android:text="CARETAKER"
                android:fontFamily="@font/roboto"
                android:textColor="@color/brown"
                android:textSize="16dp"
                android:textStyle="">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>