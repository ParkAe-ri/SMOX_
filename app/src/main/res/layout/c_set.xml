<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="backtoHome">
        <ImageView
            android:id="@+id/account"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:src="@drawable/i_back"
            android:alpha="0.9">
        </ImageView>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="0.9"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:textSize="18dp">
    </TextView>

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="480dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/rect_white"
        android:id="@+id/adpatient">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/save_slot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/green"
            android:src="@drawable/i_save"
            android:onClick="save">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="480dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/background_rect_long">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="SLOT 1"
            android:textColor="@color/brown"
            android:textSize="24dp"
            android:id="@+id/slot">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="The Medicine"
            android:textColor="@color/green_dark"
            android:textSize="14dp">
        </TextView>

        <EditText
            android:id="@+id/medicine_name"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/rect_stroke"
            android:fontFamily="@font/roboto"
            android:paddingLeft="5dp"
            android:textColor="@color/brown"
            android:textSize="14dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="Interval"
            android:textColor="@color/green_dark"
            android:textSize="14dp">
        </TextView>

        <EditText
            android:id="@+id/interval"
            android:layout_width="190dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="155dp"
            android:background="@drawable/rect_stroke"
            android:fontFamily="@font/roboto"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="@color/brown"
            android:textSize="14dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="160dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="Hours"
            android:textColor="@color/brown"
            android:textSize="14dp"
            android:layout_alignParentRight="true">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="Dosage"
            android:textColor="@color/green_dark"
            android:textSize="14dp">
        </TextView>

        <EditText
            android:id="@+id/dosage"
            android:layout_width="190dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="225dp"
            android:background="@drawable/rect_stroke"
            android:fontFamily="@font/roboto"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="@color/brown"
            android:textSize="14dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="230dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="Tablet"
            android:textColor="@color/brown"
            android:textSize="14dp"
            android:layout_alignParentRight="true">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="270dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="Instruction for use"
            android:textColor="@color/green_dark"
            android:textSize="14dp">
        </TextView>

        <EditText
            android:id="@+id/instruction"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="295dp"
            android:background="@drawable/rect_stroke"
            android:fontFamily="@font/roboto"
            android:paddingLeft="5dp"
            android:textColor="@color/brown"
            android:textSize="14dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="340dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto"
            android:text="Period"
            android:textColor="@color/green_dark"
            android:textSize="14dp">
        </TextView>

        <EditText
            android:id="@+id/period"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="365dp"
            android:background="@drawable/rect_stroke"
            android:fontFamily="@font/roboto"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="@color/brown"
            android:textSize="16dp"></EditText>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp">
            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:text="Days"
                android:textSize="14dp"
                android:textColor="@color/brown"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="410dp"
            android:alpha="0.9"
            android:fontFamily="@font/roboto_thin_italic"
            android:text="*This term can change according to the patient's condition"
            android:textColor="@color/brown"
            android:textSize="11dp"
            android:textStyle="">
        </TextView>
    </RelativeLayout>
</RelativeLayout>
