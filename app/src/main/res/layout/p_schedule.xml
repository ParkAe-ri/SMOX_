<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    tools:context=".caretaker.Schedule">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backgroud1">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:onClick="backtoHome">
            <ImageView
                android:id="@+id/account"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/i_back"
                android:alpha="0.9">
            </ImageView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULE"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha="0.9"
            android:fontFamily="@font/opensans"
            android:textColor="@color/white"
            android:textSize="20dp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_white"
            android:id="@+id/adpatient">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/background_rect">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Nama Obat"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="65dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Target"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/period1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin_italic"
                android:text="*Dapat berubah-ubah disesuaikan dengan kondisi pasien"
                android:textColor="@color/brown"
                android:textSize="11dp"
                android:textStyle="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="60dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Rentang Jadwal"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/interval1"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="70dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="72dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="160dp"
                android:alpha="0.8"
                android:fontFamily="@font/roboto_thin"
                android:text="MENIT"
                android:textColor="@color/brown"
                android:textSize="24dp"
                android:textStyle="">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/adpatient"
            android:layout_marginTop="25dp"
            android:background="@drawable/rect_white">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/background_rect">
            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Nama Obat"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="65dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Target"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/period2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin_italic"
                android:text="*Dapat berubah-ubah disesuaikan dengan kondisi pasien"
                android:textColor="@color/brown"
                android:textSize="11dp"
                android:textStyle="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="60dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Rentang Jadwal"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/interval2"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="70dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="72dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="160dp"
                android:alpha="0.8"
                android:fontFamily="@font/roboto_thin"
                android:text="MENIT"
                android:textColor="@color/brown"
                android:textSize="24dp"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
