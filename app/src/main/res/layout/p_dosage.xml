<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="backtoHome">
        <ImageView
            android:id="@+id/account"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:src="@drawable/i_back"
            android:alpha="0.9">
        </ImageView>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOSAGE"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:alpha="0.9"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:textSize="18dp">
    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_white"
            android:id="@+id/adpatient">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/background_rect">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="The Medicine"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="MIRTAZAPINE"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold">
            </TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="MIRTAZAPINE"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold">
            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="Procedure"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="154dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="Sesudah makan &amp; Sebelum tidur"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="Dosage"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="1"
                android:textColor="@color/brown"
                android:textSize="72dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin_italic"
                android:text="TABLET"
                android:textColor="@color/brown"
                android:textSize="24dp"
                android:textStyle="bold">
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/adpatient"
            android:layout_marginTop="25dp"
            android:background="@drawable/rect_white">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/background_rect">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="The Medicine"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="Procedure"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="154dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="Dosage"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:alpha="0.9"
                android:fontFamily="@font/roboto"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="72dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin_italic"
                android:text="TABLET"
                android:textColor="@color/brown"
                android:textSize="24dp"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>
