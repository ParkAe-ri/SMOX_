<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    tools:context=".caretaker.Dosage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backgroud1">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:onClick="backtoHome">
            <ImageView
                android:id="@+id/account"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/i_back"
                android:alpha="0.9">
            </ImageView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOSAGE"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha="0.9"
            android:fontFamily="@font/opensans"
            android:textColor="@color/white"
            android:textSize="20dp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_white"
            android:id="@+id/adpatient">


            <ImageView
                android:layout_width="35dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/background_rect">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Nama Obat"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Aturan Konsumsi"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/instruction1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="154dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="190dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="50dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Dosis"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/dosage1"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="60dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="72dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin"
                android:text="TABLET"
                android:textColor="@color/brown"
                android:textSize="24dp"
                android:textStyle="">
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/adpatient"
            android:layout_marginTop="25dp"
            android:background="@drawable/rect_white">


            <ImageView
                android:layout_width="35dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/background_rect">
            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Nama Obat"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="130dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Aturan Konsumsi"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/instruction2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="154dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textColor="@color/brown"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="190dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="50dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="Dosis"
                android:textColor="@color/green_dark"
                android:textSize="14dp">
            </TextView>

            <TextView
                android:id="@+id/dosage2"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="60dp"
                android:alpha="0.9"
                android:fontFamily="@font/opensans"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="72dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="160dp"
                android:alpha="0.9"
                android:fontFamily="@font/roboto_thin"
                android:text="TABLET"
                android:textColor="@color/brown"
                android:textSize="24dp"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
