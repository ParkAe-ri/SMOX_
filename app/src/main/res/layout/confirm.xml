<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ConfirmRole">

    <RelativeLayout
        android:id="@+id/aspatient"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="@drawable/rectwhite"
        android:clickable="true"
        android:onClick="pickPatient">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/patient">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="25dp"
            android:alpha="0.9"
            android:fontFamily="@font/opensans"
            android:text="AS PATIENT"
            android:textColor="@color/brown"
            android:textSize="14sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="144dp"
            android:layout_height="70dp"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="52dp"
            android:alpha="0.9"
            android:fontFamily="@font/opensans"
            android:text="The one who takes the medicine. Canâ€™t manage the schedule and the dosage."
            android:textColor="@color/brown"
            android:textSize="12sp"
            android:textStyle="">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_below="@id/aspatient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectwhite"
        android:clickable="true"
        android:onClick="pickCaretaker">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/caretaker">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="25dp"
            android:alpha="0.9"
            android:fontFamily="@font/opensans"
            android:text="AS CARETAKER"
            android:textColor="@color/brown"
            android:textSize="14sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="144dp"
            android:layout_height="70dp"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="52dp"
            android:alpha="0.9"
            android:fontFamily="@font/opensans"
            android:text="The keeper. This person manages the schedule and the dosage for the patient."
            android:textColor="@color/brown"
            android:textSize="12sp"
            android:textStyle="">
        </TextView>
    </RelativeLayout>

</RelativeLayout>