<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMOX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#90000000</item>
        <item name="colorPrimaryVariant">#90000000</item>
        <item name="colorOnPrimary">#90000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D5EEBB</item>
        <item name="colorSecondaryVariant">#D5EEBB</item>
        <item name="colorOnSecondary">#BF000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SpinKitView.Large.Wave">
        <item name="SpinKit_Style">Wave</item>
    </style>


</resources>